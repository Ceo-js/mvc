<!DOCTYPE html>
<html>
  <head>
    <title><%= pageTitle %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        gallery {
            display: grid;
            grid-template-columns: repeat( 5, .2fr );
            gap: 1.5rem;
        }
        card {
            display: grid;
            width: 150px;
            aspect-ratio: 1 /2.5;
            padding: 1.5rem;
            border-radius: 1.5rem;
            background: #212329;
            box-shadow: #0005 0 0 5px;
        }
        card img {
            height: 100px;
            aspect-ratio: 1 / 1;
        }
    </style>
  </head>
  <body>
    <%- include( "./includes/appbar" ) %>
    <main>
        <h1><%= (admin) ? "Admin Products Page" : "Products List" %></h1>


        <% if( products.length ) {%>
            <gallery>
                <% for( let product of products ) { %>
                    <card>
                        <header><img src="<%= product.image %>" alt=""></header>
                        <h1><%= product.title %></h1>
                        <p desc><%= product.description %></p>
                        <p price><%= product.price %></p>
                        <p>
                        <% if( admin ) { %>
                            <form >
                                <a href="/product/edit/<%= product.id %>" title="<%= product.id %>" btn>Edit</a>
                                <a href="/product/details/<%= product.id %>" title="<%= product.id %>" btn>Delete</a>
                            </form>
                        <% } else { %>
                            <a href="/product/details/<%= product.id %>" title="<%= product.id %>" btn>Ver Detalhes</a>
                            <%- include( "includes/cartButton", { product: product } ) %>
                        </p>
                        <% } %>
                    </card>
                <% } %>
            </gallery>
        <% } else {%>
            <div>No Products Available</div>
        <% } %>
