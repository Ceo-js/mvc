<!DOCTYPE html>
<html>
  <head>
    <title><%= pageTitle %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        gallery {
            display: grid;
            grid-template-columns: repeat( 5, .2fr );
            gap: 1.5rem;
        }
        card {
            display: grid;
            width: 150px;
            aspect-ratio: 1 /2.5;
            padding: 1.5rem;
            border-radius: 1.5rem;
            background: #212329;
            box-shadow: #0005 0 0 5px;
        }
        card img {
            height: 100px;
            aspect-ratio: 1 / 1;
        }
        [btn], button {
            display: grid;
            place-items: center;
            margin: 5px;
            padding: 1rem 1.5rem;
            border-radius: 9px;
            background: #905;
            color: #fff;
            text-decoration: none;
            outline: none;
            border: transparent;
        }
    </style>
  </head>
  <body>
    <%- include( "./includes/appbar0" ) %>
    <main>
        <h1><%= (admin) ? "Admin Products Page" : "Products List" %></h1>


        <% if( products.length ) {%>
            <gallery>
                <% for( let product of products ) { %>
                    <card>
                        <header><img src="<%= product.image %>" alt=""></header>
                        <h1><%= product.title %></h1>
                        <p desc><%= product.description %></p>
                        <p price><%= product.price %></p>
                        <p>
                        <% if( admin ) { %>
                            <div >
                                <a btn href="/admin/edit-product/<%= product.id %>" title="<%= product.id %>" btn>Edit</a>
                                <form action="/admin/delete" method="post">
                                    <input type="hidden" name="productId" value="<%= product.id %>">
                                    <button>Delete</button>
                                </form>
                            </div>
                        <% } else { %>
                            <a href="/admin/product-details/<%= product.id %>" title="<%= product.id %>" btn>Ver Detalhes</a>
                            <%- include( "includes/cartButton", { product: product } ) %>
                        </p>
                        <% } %>
                    </card>
                <% } %>
            </gallery>
        <% } else {%>
            <div>No Products Available</div>
        <% } %>
<!-- 
        <% if( products.length ) {%>
            <div>
                <% for( let product of products ) { %>
                    <h3><%= product.title %></h3>
                <% } %>
            </div>
        <% } else {%>
            <div>No Products Available</div>
        <% } %> -->

        <%= admin ? "product-list" : "x" %>
    </main>
  </body>
</html>
